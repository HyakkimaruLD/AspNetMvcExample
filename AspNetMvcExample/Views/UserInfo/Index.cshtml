@model List<UserInfo>
@{
    ViewData["Title"] = "List of user info";
}
<div>

    <h1>@ViewData["Title"]</h1>
    <a asp-controller="UserInfo"
       asp-action="Create"
       class="btn btn-success">Create</a>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Name</th>
                <th>Email</th>
                <th>Profession</th>
                <th>Author</th> <!-- Добавляем столбец "Author" -->
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>
                        @if (item.ImageFiles.Count > 0)
                        {
                            <div style="display: flex;">
                                @foreach (var galleryItem in item.ImageFiles)
                                {
                                    @await Html.PartialAsync("_ImageComponent", galleryItem, new ViewDataDictionary(ViewData)
                        {
                        {"maxWidth", "100px"},
                        {"borderColor", "grey"}
                        })
                                }
                            </div>
                        }


                    </td>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Profession</td>
                    <td>@(item.User != null ? item.User.Email : "No User")</td> <!-- Добавляем отображение автора с проверкой на null -->
                    <td>
                        <a asp-area=""
                           asp-controller="UserInfo"
                           asp-action="View"
                           asp-route-id="@item.Id"
                           class="btn btn-primary">View</a>

                        <a asp-area=""
                           asp-controller="UserInfo"
                           asp-action="Edit"
                           asp-route-id="@item.Id"
                           class="btn btn-primary">Edit</a>

                        <form asp-area="" asp-controller="UserInfo" asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this user?')">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>