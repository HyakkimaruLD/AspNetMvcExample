@model List<UserRolesViewModel>

@{
    ViewData["Title"] = "Manage Users";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-white border-0 text-center py-3">
            <h3 class="fw-semibold text-primary">@ViewData["Title"]</h3>
        </div>
        <div class="card-body bg-light rounded-bottom-4">
            <div class="table-responsive">
                <table class="table align-middle text-center">
                    <thead class="border-bottom">
                        <tr class="text-muted">
                            <th>User ID</th>
                            <th>Username</th>
                            <th>Roles</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr class="bg-white shadow-sm rounded-3">
                                <td class="fw-medium">@user.UserId</td>
                                <td class="fw-medium">@user.UserName</td>
                                <td class="text-muted">@string.Join(", ", user.Roles)</td>
                                <td>
                                    <a asp-area="Auth" asp-controller="Role" asp-action="Edit" asp-route-id="@user.UserId"
                                       class="btn btn-sm btn-outline-primary">
                                        ✏️ Edit
                                    </a>
                                    <form asp-area="Auth" asp-controller="Role" asp-action="DeleteUser" asp-route-id="@user.UserId"
                                          method="post" class="d-inline"
                                          onsubmit="return confirm('Are you sure you want to delete this user?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            ❌ Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
